@model ModalCorViewModel

<div class="row">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modalLabel">Excluir</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Tem certeza que deseja excluir este registro?</p>
      </div>
      <div class="modal-footer">
        <form asp-action="Delete">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div>
    <hr />
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-1">
                <label asp-for="Id" class="form-label">Código</label>
                <input asp-for="Id" type="text" class="form-control" disabled>
            </div>

            <div class="col-sm-5">
                <label asp-for="DsCor" class="form-label">Cor</label>
                <input asp-for="DsCor" type="text" class="form-control" disabled>
            </div>
        </div>
        <div class="row justify-content-md-center text-center">
            <div class="col-sm-2 g-3">
                <label asp-for="DataCadastro" class="form-label">Data de Cadastro</label>
                <input asp-for="DataCadastro" type="text" class="form-control text-center" disabled>
            </div>

            <div class="col-sm-2 g-3">
                <label asp-for="DataUltAlteracao" class="form-label">Data de Alteração</label>
                <input asp-for="DataUltAlteracao" type="text" class="form-control text-center" disabled>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-2 g-3">
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal">
                    Excluir
                </button>
                <a class="ms-2 btn btn-primary" asp-action="Index"><i class="fa-solid fa-chevron-left"></i> Voltar</a>
            </div>
        </div>
    </div>
    
