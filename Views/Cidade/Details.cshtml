<div class="container">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="paisModalLabel">Detalhes</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class="row justify-content-sm-center">
              <div class="col-sm-2">
                <label asp-for="Id" class="form-label">Código</label>
                <input asp-for="Id" type="text" class="form-control" disabled>
              </div>

              <div class="col-sm-8">
                <label asp-for="NmCidade" class="form-label">Cidade</label>
                <input asp-for="NmCidade" type="text" class="form-control" disabled>
              </div>

              <div class="col-sm-2">
                <label asp-for="Ddd" class="form-label">DDD</label>
                <input asp-for="Ddd" type="text" class="form-control" disabled>
              </div>
            </div>
            <div class="row justify-content-md-center">
              <div class="col-sm-2">
                <label asp-for="estado" class="form-label">Código</label>
                <input asp-for="estado.Id" type="text" class="form-control" disabled>
              </div>

              <div class="col-sm-10">
                <label asp-for="estado" class="form-label">Estado</label>
                <input asp-for="estado.NmEstado" type="text" class="form-control" disabled>
              </div>
            </div>
            <div class="row justify-content-md-center text-center">
              <div class="col-sm-5 g-3">
                <label asp-for="DataCadastro" class="form-label">Data de Cadastro</label>
                <input asp-for="DataCadastro" type="text" class="form-control text-center" disabled>
              </div>

              <div class="col-sm-5 g-3">
                <label asp-for="DataUltAlteracao" class="form-label">Data de Alteração</label>
                <input asp-for="DataUltAlteracao" type="text" class="form-control text-center" disabled>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a 
            type="button" 
            class="btn btn-primary" 
            asp-controller="Cidade"
            asp-action="Edit" 
            asp-route-id="@Model.Id"
            >
            Editar
          </a>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
</div>