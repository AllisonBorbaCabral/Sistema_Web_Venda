@model ListGradeCorViewModel

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
  </div>
</div>


<div class="row">
    <div class="col text-center">
        <h1><i class="fa-solid fa-earth-americas"></i>@ViewData["Title"]</h1>
    </div>
</div>

<div class="col">
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle-fill"></i> Nova Grade de Cores</a>
</div>

<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Cód.</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Cores</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gradeCor in Model.GradeCores)
                {
                    <tr>
                        <th scope="row">@gradeCor.Id</th>
                        <th scope="row">@gradeCor.Descricao</th>
                        <th scope="row">@gradeCor.Cores</th>
                        <td>
                            <a 
                                asp-action="Edit"
                                asp-controller="GradeCor"
                                asp-route-id="@gradeCor.Id"
                                class="btn btn-sm btn-warning"
                                >
                                <i class="bi bi-pencil-square text-light"></i>
                            </a>
                            <button 
                                data-bs-toggle="modal"
                                data-bs-target="#modal"
                                class="btn btn-sm btn-info detail"
                                data-id="@gradeCor.Id"
                                >
                                <i class="bi bi-eye-fill text-light"></i>
                            </button>
                            <a 
                                asp-action="Delete"
                                asp-controller="GradeCor"
                                asp-route-id="@gradeCor.Id"
                                class="btn btn-sm btn-danger"
                                >
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>


@section scripts{
    <script>
        $(function () {
            $(".detail").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("GradeCor/Details?id=" + id, function () {
                    $("#modal").modal();
                })
            });
            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("GradeCor/Edit?id=" + id, function () {
                    $("#modal").modal();
                })
            });
        })
